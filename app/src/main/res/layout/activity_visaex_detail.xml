<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/taste_line">
    <include
        layout="@layout/app_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/taste_line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/zhanweitu"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/third_font_size"
                    android:textColor="@color/main_font"
                    android:text="地址:"
                    android:padding="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textSize="@dimen/third_font_size"
                        android:textColor="@color/main_font"
                        android:text="邮编:"
                        android:padding="10dp"/>
                    <TextView
                        android:id="@+id/txt_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textSize="@dimen/third_font_size"
                        android:textColor="@color/main_font"
                        android:text="打开地图查看位置"
                        android:padding="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/third_font_size"
                        android:textColor="@color/main_font"
                        android:text="电话:"
                        android:padding="10dp"/>
                    <TextView
                        android:id="@+id/txt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textSize="@dimen/third_font_size"
                        android:textColor="@color/royalblue"
                        android:text="4555454"
                        android:padding="10dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_wx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/third_font_size"
                    android:textColor="@color/main_font"
                    android:text="微信:"
                    android:padding="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/third_font_size"
                        android:textColor="@color/main_font"
                        android:text="温馨提示:"
                        android:padding="10dp"/>
                    <TextView
                        android:id="@+id/txt_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/third_font_size"
                        android:textColor="@color/main_font"
                        android:text="4555454"
                        android:padding="10dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:background="@color/bg_tab_line"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="私信"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>