<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include
        layout="@layout/app_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/login_mian"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/img_store"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/zhanweitu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txt_storename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起送100£ 配送4£"
                        android:textColor="@color/white"
                        android:textSize="@dimen/second_font_size" />

                    <TextView
                        android:id="@+id/txt_price_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="首次减免"
                        android:textColor="@color/white"
                        android:textSize="@dimen/four_font_size" />


                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/img_collet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@mipmap/img_collect_ware" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collection"
                        android:textColor="@color/white"
                        android:textSize="@dimen/third_font_size" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt_jian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/jian"
                        android:drawablePadding="5dp"
                        android:padding="5dp"
                        android:text="首次减免"
                        android:textColor="@color/white"
                        android:textSize="@dimen/third_font_size" />

                    <TextView
                        android:id="@+id/txt_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/img_newevent"
                        android:drawablePadding="5dp"
                        android:padding="5dp"
                        android:text="店铺满减"
                        android:textColor="@color/white"
                        android:textSize="@dimen/third_font_size" />

                    <TextView
                        android:id="@+id/txt_te"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/te"
                        android:drawablePadding="5dp"
                        android:padding="5dp"
                        android:text="天天特价"
                        android:textColor="@color/white"
                        android:textSize="@dimen/third_font_size" />
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_eventnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3个活动"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/third_font_size"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_firstcut"
                    android:paddingLeft="15dp"
                    android:textColor="@color/white"
                    android:text=""
                    android:paddingBottom="3dp"
                    android:textSize="@dimen/third_font_size"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_fulldown"
                    android:paddingLeft="15dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/third_font_size"
                    />
            </LinearLayout>
        </LinearLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_app"
            app:tabIndicatorColor="@color/login_mian"
            app:tabBackground="@color/bg_app"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/login_mian"
            ></android.support.design.widget.TabLayout>
        <butao.ulife.com.view.NoScrollViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ></butao.ulife.com.view.NoScrollViewPager>
    </LinearLayout>

</LinearLayout>