<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/style_search">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_ware"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@mipmap/zhanweitu"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_wareName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/second_font_size"
                    android:textColor="@color/main_font"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="特色鸭血粉丝"/>
                <TextView
                    android:id="@+id/txt_disPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/login_mian"
                    android:textSize="@dimen/third_font_size"
                    android:padding="10dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_wareprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/third_font_size"
                android:visibility="gone"
                android:textColor="@color/content_font"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text=""/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:textColor="@color/login_mian"
                    android:drawableLeft="@mipmap/jian"
                    android:textSize="@dimen/four_font_size"
                    android:text="店铺满减"/>
                <TextView
                    android:id="@+id/txt_te"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/login_mian"
                    android:drawableLeft="@mipmap/te"
                    android:textSize="@dimen/four_font_size"
                    android:text="天天特价"/>
                <TextView
                    android:id="@+id/txt_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/login_mian"
                    android:drawableLeft="@mipmap/img_newevent"
                    android:textSize="@dimen/four_font_size"
                    android:text="首次减免"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:textColor="@color/login_mian"
                    android:drawableLeft="@mipmap/duigou"
                    android:textSize="@dimen/four_font_size"
                    android:text="超时退款"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/login_mian"
                    android:drawableLeft="@mipmap/duigou"
                    android:textSize="@dimen/four_font_size"
                    android:text="买家退款"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="数量 Number"
            android:textColor="@color/font_bcolor"
            android:textSize="@dimen/third_font_size"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/txt_buyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:layout_marginRight="30dp"
            android:textColor="@color/login_mian"
            android:textSize="@dimen/third_font_size"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="小计 Subtotal"
            android:textColor="@color/font_bcolor"
            android:textSize="@dimen/third_font_size"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/txt_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="£：20  = ￥：150"
            android:layout_marginRight="5dp"
            android:textColor="@color/login_mian"
            android:textSize="@dimen/third_font_size"
            android:padding="10dp"/>
    </LinearLayout>
</LinearLayout>