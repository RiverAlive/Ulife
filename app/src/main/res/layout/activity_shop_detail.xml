<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/taste_line">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="45dp"
            android:orientation="vertical">
            <include
                layout="@layout/app_title"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:background="@color/taste_line">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@mipmap/zhanweitu"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textSize="@dimen/third_font_size"
                                android:textColor="@color/main_font"
                                android:text="地址:"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/txt_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:layout_weight="1"
                                android:textSize="@dimen/third_font_size"
                                android:textColor="@color/royalblue"
                                android:text=""
                                android:padding="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textSize="@dimen/third_font_size"
                                android:textColor="@color/main_font"
                                android:text="店名:"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/txt_storeName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:layout_weight="1"
                                android:textSize="@dimen/third_font_size"
                                android:textColor="@color/royalblue"
                                android:text=""
                                android:padding="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textSize="@dimen/third_font_size"
                                android:textColor="@color/main_font"
                                android:text="电话:"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/txt_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:layout_weight="1"
                                android:textSize="@dimen/third_font_size"
                                android:textColor="@color/royalblue"
                                android:text=""
                                android:padding="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textSize="@dimen/third_font_size"
                                android:textColor="@color/main_font"
                                android:text="温馨提示:"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/txt_remark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/third_font_size"
                                android:textColor="@color/main_font"
                                android:text=""
                                android:padding="10dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_storeInto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/second_font_size"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="进入门店"
            android:padding="10dp"
            android:background="@color/bg_tab_line"/>
    </RelativeLayout>

</RelativeLayout>